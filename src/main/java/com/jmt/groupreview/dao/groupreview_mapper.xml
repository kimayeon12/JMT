<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jmt.groupreview.dao.GroupReviewDAO">
	<!-- class_no가 1(번개모임리스트), 3(도장깨기리스트) -->
	<select id="groupReviewList" parameterType="hashmap" resultType="com.jmt.groupreview.dto.GroupReviewDTO">
		SELECT idx
			,review_title
			,review_date
			,class_no
			,groupReview_no
		FROM groupReview
		<!-- <where>
			<if test="!keyword.equals('')">
				AND class_no LIKE CONCAT('%',#{keyword},'%')
			</if>
		</where> -->
		ORDER BY groupReview_no LIMIT #{cnt} OFFSET #{offset}
	</select>
	
	<select id="allCount" resultType="int">
		SELECT COUNT(groupReview_no) FROM groupReview
		<!-- <where>
			<if test="!keyword.equals('')">
				AND class_no LIKE CONCAT('%',#{keyword},'%')
			</if>
		</where> -->
	</select>

</mapper>